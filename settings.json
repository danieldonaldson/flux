{
    //editor
    "editor.tabSize": 2,
    "editor.formatOnSave": true,
    "editor.insertSpaces": true,
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,
    "files.exclude": {
        "**/.git": true,
        "**/.DS_Store": true,
        "node_modules": true
    },
    //astro
    "astro.format.enable": true,
    "astro.format.indent": 2,
    "astro.format.trailingComma": "es5",
    "astro.format.bracketSpacing": true,
    "astro.format.singleQuote": true,
    "astro.format.printWidth": 80,
    "astro.languageServer.command": "astro",
    "astro.languageServer.arguments": [
        "--stdio"
    ],
    "astro.trace.server": "verbose",
    //rust
    "[rust]": {
        "editor.defaultFormatter": "rust-lang.rust-analyzer",
        "editor.formatOnSave": true
    },
    "rust-analyzer.rustfmt.overrideCommand": null,
    "rust-analyzer.check.command": "clippy",
    "rust-analyzer.checkOnSave.command": "clippy",
    "emmet.includeLanguages": {
        "svelte": "html"
    },
    //svelte
    "svelte.language-server.runtime": "node",
    "svelte.plugin.typescript.enable": true,
    "svelte.plugin.svelte-vscode": {
        "compilerWarnings": {
            "unused-export-let": true,
            "unused-export-const": true,
            "unused-export-function": true
        }
    },
    "svelte.plugin.svelte-vscode-languageserver": {
        "initializationOptions": {
            "config": {
                "svelte": {
                    "compilerOptions": {
                        "dev": true
                    }
                }
            }
        }
    },
    //tailwind
    "tailwindCSS.emmetCompletions": true,
    "tailwindCSS.colorDecorators": true,
    "tailwindCSS.validate": true,
    "tailwindCSS.lint": {
        "configFile": "tailwind.config.js"
    }
}
